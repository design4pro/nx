{
  "extends": "../../.releaserc.json",
  "tagFormat": "nx-vscode-extension-v${version}",
  "plugins": [
    [
      "@design4pro/nx-release",
      {
        "project": "nx-vscode-extension"
      }
    ],

    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],

    [
      "@semantic-release/npm",
      {
        "pkgRoot": "dist/packages/nx-vscode-extension"
      }
    ],
    "@semantic-release/github",

    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md"],
        "message": "chore(nx-vscode-extension): release ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
