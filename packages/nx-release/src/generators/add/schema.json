{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "NxRelease",
  "title": "",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Which project do you want to add semantic release to?"
    },
    "changelog": {
      "description": "Create or update the changelog file",
      "type": "boolean",
      "default": false
    },
    "changelogFile": {
      "description": "Changelog file name",
      "type": "string",
      "default": "CHANGELOG.md"
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["project"]
}
