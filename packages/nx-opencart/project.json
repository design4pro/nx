{
  "name": "nx-opencart",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nx-opencart/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/nx-opencart",
        "main": "packages/nx-opencart/src/index.ts",
        "tsConfig": "packages/nx-opencart/tsconfig.lib.json",
        "assets": [
          "packages/nx-opencart/*.md",
          {
            "input": "./packages/nx-opencart/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/nx-opencart/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/nx-opencart",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/nx-opencart",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/nx-opencart/**/*.ts",
          "packages/nx-opencart/generators.json",
          "packages/nx-opencart/executors.json",
          "packages/nx-opencart/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/nx-opencart/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "release": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx semantic-release -e ./packages/nx-opencart/.releaserc.js"
          }
        ]
      }
    }
  },
  "tags": [
    "opencart"
  ]
}